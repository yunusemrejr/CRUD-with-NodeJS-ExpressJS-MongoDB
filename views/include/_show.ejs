<% for(var i = 0; i < users.length; i++) { %>
    <tr>
        <td data-label="#"><%= i + 1 %></td>
        <td data-label="Name">
            <strong><%= users[i].name %></strong>
        </td>
        <td data-label="Email"><%= users[i].email %></td>
        <td data-label="Gender"><%= users[i].gender %></td>
        <td data-label="Status">
            <span style="padding: 0.3em 0.8em; border-radius: 20px; font-size: 0.85em; font-weight: 600; background: <%= users[i].status === 'Active' ? '#d1fae5' : '#fee2e2' %>; color: <%= users[i].status === 'Active' ? '#065f46' : '#991b1b' %>;">
                <%= users[i].status %>
            </span>
        </td>
        <td data-label="Created">
            <%= new Date(users[i].createdAt).toLocaleDateString() %>
        </td>
        <td data-label="Actions">
            <a href="/update-user?id=<%= users[i]._id%>" class="btn border-shadow update" title="Edit User">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn border-shadow delete" data-id="<%= users[i]._id%>" title="Delete User">
                <i class="fas fa-trash-alt"></i>
            </a>
        </td>
    </tr>
<% } %>
